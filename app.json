{
  "expo": {
    "name": "seabreeze",
    "slug": "seabreeze",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "seabreeze",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.davidfanaro.seabreeze.v1",
      "infoPlist": {
        "NSCameraUsageDescription": "The app uses your camera so you can take photos to share with the AI Chat.",
        "NSPhotoLibraryUsageDescription": "The app accesses your photos to let you share them with the AI Chat.",
        "NSPhotoLibraryAddUsageDescription": "The app saves selected media metadata while composing AI messages."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.davidfanaro.seabreeze.v1"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with the AI Chat.",
          "cameraPermission": "The app uses your camera so you can take photos to share with the AI Chat."
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-sqlite",
      "expo-font",
      "expo-web-browser",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3605baa6-6a9c-4364-be1e-6963a863653c"
      }
    }
  }
}
